<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="gestao_diss_processo_action" model="ir.actions.act_window">
        <field name="name">Gestão de Dissertações - Processos</field>
        <field name="res_model">gest_diss.processo</field> <!--  Atualizar depois o modelo com o correto -->
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem name="Gestão de Dissertações" id="gestao_diss_menu_base" />
    <menuitem name="Processos" id="gestao_diss_processo_menu" parent="gestao_diss_menu_base" action="gestao_diss_processo_action"/>

    <!-- Form View -->
    <record id="gestao_diss_processo_view_form" model="ir.ui.view">
        <field name="name">Formulário do Processo</field>
        <field name="model">gest_diss.processo</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="estado_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="aluno_id"/>
                            <field name="diss_titulo" />
                            <field name="orientador_id"/>
                            <field name="coorientador_id"/>
                        </group>
                        <group>
                            <field name="juri_presidente_id"/>
                            <field name="juri_vogal1_id"/>
                            <field name="juri_vogal2_id"/>
                            <field name="arguente_id" />
                        </group>
                        <group>
                            <field name="data_homologacao"/>
                            <field name="nota"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="gestao_diss_processo_view_tree" model="ir.ui.view">
        <field name="name">Listagem de Processos</field>
        <field name="model">gest_diss.processo</field> <!-- mudar dps o modelo-->
        <field name="arch" type="xml">
            <tree>
                <field name="aluno_id" widget="many2one"/>
                <field name="juri_presidente_id" widget="many2one"/>
                <field name="juri_vogal1_id" widget="many2one"/>
                <field name="juri_vogal2_id" widget="many2one"/>
                <field name="arguente_id" widget="many2one"/>
                <field name="orientador_id" widget="many2one"/>
                <field name="coorientador_id" widget="many2one"/>
                <field name="defesa_id" widget="many2one"/>
                <field name="data_homologacao"/>
                <field name="estado_id"/>
            </tree>
        </field>
    </record>

    <!-- Adicionar depois aqui uma search view com filtros etc, ver exemplo do codigo chapter 12 da drive que coloquei no discord -->


</odoo>
