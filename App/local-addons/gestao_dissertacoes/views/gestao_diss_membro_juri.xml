<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='gestao_diss_arguente_action' model='ir.actions.act_window'>
        <field name="name">Gestão de Dissertações - Arguentes</field>
        <field name="res_model">gest_diss.arguente</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Arguentes" id="gestao_diss_arguente_menu" parent="gestao_diss_menu_base" action="gestao_diss_arguente_action"/>
    <menuitem name="Listagem Arguentes" sequence="1" id="gestao_diss_arguentes_menu" parent="gestao_diss_arguente_menu" action="gestao_diss_arguente_action"/>

    <!-- Tree(list) View -->
    <record id="gestao_diss_arguente_view_tree" model="ir.ui.view">
        <field name="name">Listagem de Arguentes</field>
        <field name="model">gest_diss.arguente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nome"/>
                <field name="entidade_patronal"/>
                <field name="cargo"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Adicionar depois aqui uma search view com filtros etc, ver exemplo do codigo chapter 12 da drive que coloquei no discord -->

</odoo>