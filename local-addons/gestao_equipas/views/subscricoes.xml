<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Form -->
        <record id="subscricao_view_form" model="ir.ui.view">
            <field name="name">local_view_form</field>
            <field name="model">ges.subscricao</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="descricao"/>
                            <field name="periodicidade"/>
                            <field name="montante"
                                   widget='monetary'
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="payment_term"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Tree (List) -->
        <record id="subscricao_view_tree" model="ir.ui.view">
            <field name="name">produto_view_tree</field>
            <field name="model">ges.subscricao</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="descricao"/>
                    <field name="periodicidade"/>
                    <field name="montante"
                           widget='monetary'
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="payment_term"/>
                </tree>
            </field>
        </record>


        <!-- Search options -->
        <record id="subscricao_view_search" model="ir.ui.view">
            <field name="name">produto_view_search</field>
            <field name="model">ges.subscricao</field>
            <field name="arch" type="xml">
                <search>
                    <field name="descricao"/>
                </search>
            </field>
        </record>


        <!-- Lista de locais -->
        <record model="ir.actions.act_window" id="lista_subscricoes_action">
            <field name="name">Lista de subscrições</field>
            <field name="res_model">ges.subscricao</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>